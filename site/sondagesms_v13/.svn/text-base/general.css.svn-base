/***********************************/
/*        GAMME DE COULEURS        */
/*    couleur de fond : #dbf836    */
/*      gris clair : #919191       */
/*      gris fonce : #313131       */
/*       couleur typo : #000       */
/***********************************/

/* remise a zero des navigateurs */
* { margin: 0; padding: 0; border: none; font-size: 100%; font-family: Arial, sans-serif; font-weight: normal; font-style: normal; text-decoration: none; background: none; } 

/* styles generaux */
html, body { margin: auto; padding: 0; height: 100%; color: #000; font-size: 1em;  }
img { border: 0; vertical-align: middle; }
b { font-weight: bold; }
b * { font-weight: bold; }
i  { font-style: italic; }
u { text-decoration: underline; }
hr { height: 1px; background: #919191; margin: 2em 0; }


/*************************/
/*   BANDEAU SUPERIEUR   */
/*************************/

#bandeau { position: fixed; width: 100%; height: 25px; line-height: 25px; vertical-align: middle; }
#bandeau a { display: block; float: left; width: 80px; text-align: right; height: 25px; line-height: 25px; vertical-align: middle; }
h1 { font-size: 1em; font-weight: bold; font-style: italic; color: #919191; text-align: center; }



/*************************/
/*   BANDEAU INFERIEUR   */
/*************************/

#mention { background-color: #313131; width: 100%; height: 25px; line-height: 25px; vertical-align: middle; font-size: .8em; font-style: italic; color: #919191; text-align: center;  }
#mention img { margin-right: 20px; }
#mention a { font-style: italic; font-weight: normal; }
#mention a:hover, #mention a:focus, #mention a:active { color: #fff; }



/************************/
/*        CADRES        */
/************************/

#page { margin: 0 auto; width: 600px; min-height: 94%; background-color: rgba(255,255,255,0.3); overflow: hidden; padding: 25px; }

#qrcode { position: fixed; width: 100px; margin-left: 30px; margin-top: 200px; font-size:.8em; text-align: center; line-height:1.3em; }
#qrcode li { margin-top: 2em;}
#qrcode a, #qrcode a:visited, #qrcode a:link { color: #000; }
#qrcode a:hover, #qrcode a:focus, #qrcode a:active { color: #313131; }

h2 { width:580px; margin-top: 30px; padding: 25px 10px; box-shadow: 0 5px 3px rgba(0, 0, 0, 0.4); -moz-border-radius: 5px; -webkit-border-radius: 5px; border-radius: 5px; font-size: 1.3em; font-weight: bold; text-align: center; }


/**************************/
/*   COULEURS ET IMAGES   */
/**************************/

/* Couleurs des liens */
a, a:visited, a:link { font-weight: bold; color: #919191; }
a:hover, a:focus, a:active { color: #000; text-decoration: underline; }

/* Couleur et image du fond de la page */
body { background: #dbf836 url(background.jpg) fixed repeat-x left 25px; }

/* Logo Petits Deb + fond du bandeau */
#bandeau { background: #313131 url(apd.png) no-repeat right center; }

/* Titre */
h2 { background-color: #000; color: #fff; }



/*******************/
/*   SPECIFIQUES   */
/*******************/

/*  Acceder au nuage  */
#voirnuage { display: block; width: 50%; background-color: #313131; color: #fff; margin: 80px auto 10px auto; padding: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; border-radius: 5px; font-size: .8em; text-align: center; }
a#voirnuage, a#voirnuage :visited, a#voirnuage:link  { color: #fff; }

/*  Messages  */
#messages { margin-top: 180px; }
#messages p { background-color: #fff; border: 1px solid #bdbdbd; margin-top: 20px; padding: 10px; font-size: 1em; line-height: 1.5em; font-weight: bold; -moz-border-radius: 8px; -webkit-border-radius: 8px; border-radius: 8px; }
#details { background-color: #919191; color: #fff; margin-top: 50px; padding: 5px; -moz-border-radius: 5px; -webkit-border-radius: 5px; border-radius: 5px; font-size: .9em; font-weight: bold; text-align: center; }

/*  Cacher les messages  */
#cache { position: fixed; width:600px; height:25px; background-color: #d3e673; }



